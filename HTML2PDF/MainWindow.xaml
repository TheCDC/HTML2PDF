<Window x:Class="HTML2PDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTML2PDF"
        xmlns:ViewModels="clr-namespace:HTML2PDF.ViewModels"
        xmlns:Views="clr-namespace:HTML2PDF.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="800"
        Height="800">
    <Window.DataContext>
        <ViewModels:MainWindowViewModel></ViewModels:MainWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModels:PdfConverterViewModel}">
            <Views:PdfConverterView></Views:PdfConverterView>
        </DataTemplate>
    </Window.Resources>
    <WrapPanel>
        <Button Command="{Binding NewJobCommand}">New Conversion</Button>
        <ContentControl Content="{Binding CurrentViewModel}"></ContentControl>
    </WrapPanel>
</Window>